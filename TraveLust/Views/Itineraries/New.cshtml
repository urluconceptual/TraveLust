@model TraveLust.Models.Itinerary

@if (ViewBag.Message != null)
{
    <h2 class="alert-secondary p-3 rounded-3 text-center mb-5">@ViewBag.Message</h2>
}

@*code generated by GitHub Copilot*@
<h2>Itinerary for @Model.Groupchat.Name</h2>
<br>
<br>

@using (Html.BeginForm(actionName: "New", controllerName: "Itineraries", method: FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(m => m.ItineraryID, new{ value = Model.ItineraryID})
    // setting the buget for the itinerary
    @Html.Label("Buget", "Set the buget: ")
    <br />
    @Html.TextBox("Buget", null, new { @class = "form-control" })
    <br />
    <br />
    @Html.ValidationMessageFor(m => m.Buget, null, new { @class = "text-danger" })
    <br />
    <br />

    // setting the dration of the trip for the itinerary
    @Html.Label("StayingPeriod", "Set the duration of the trip: ")
    <br />
    @Html.TextBox("StayingPeriod", null, new { @class = "form-control" })
    <br />
    <br />
    @Html.ValidationMessageFor(m => m.StayingPeriod, null, new { @class = "text-danger" })
    <br />
    <br />

    @*When first creating an itinerary, you can choose to add some posts from a list of 5 best rated posts*@
    <h2>Choose some posts to add to your itinerary!</h2>
    <br>
    <br>
    @foreach (var post in Model.TopPosts)
    {
        <hr />
        <p>@post.Text</p>


