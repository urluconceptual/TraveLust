@model TraveLust.Models.PostInItinerary

<h2>Add post to one of your itineraries!</h2>
</br>

@if (ViewBag.Message != null)
{
    <h2 class="alert-secondary p-3 rounded-3 text-center mb-5">@ViewBag.Message</h2>
}

@using (Html.BeginForm(actionName: "New", controllerName: "PostInItineraries", method: FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    @Html.HiddenFor(m => m.PostId, new { value = Model.PostId}) 

    @Html.Label("Description", "Short description")
    <br />
    @Html.TextBox("Description", null, new { @class = "form-control", @placeholder = "Optionally: tell your friends why this post!" })
    <br />
    <br />

    <label>Select itinerary: </label>
    @Html.DropDownListFor(m => m.ItineraryId, new SelectList(Model.AllItineraries, "Value", "Text"),
    "Select itinerary", new { @class = "form-control" })
    <br />
    @Html.ValidationMessageFor(m => m.ItineraryId, null, new { @class = "text-danger" })
    <br />
    <br />

    <button class="btn btn-outline-secondary" type="submit">Add!</button>

}