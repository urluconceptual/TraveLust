@model TraveLust.Models.Post

@if (ViewBag.Message != null)
{
    <h2 class="alert-secondary p-3 rounded-3 text-center mb-5">@ViewBag.Message</h2>
}

<div class="d-flex align-content-center justify-content-center">
    <div class="d-flex align-content-center justify-content-start flex-wrap">
        @foreach (var post in ViewBag.Posts)
        {
                <div class="card m-3" style="width: 25rem; background-color: white;">
                    <div class="card-body">
                        <div class="d-flex flex-row justify-content-between align-items-center">
                            <h3 class="card-title p-2">@post.Title</h3>
                        <div class="card-text p-2"><i class="bi bi-tag"></i> @post.Price €</div>
                        </div>
                    <h5 class="card-subtitle mb-2 text-muted">@post.City.CityName, @post.City.Country</h5>
                        <div class="card-text"><i class="bi bi-star-half"></i> @post.Rating/10</div>

                        <a href="/Posts/Show/@post.PostId" class="btn btn-outline-secondary">Vizualizare produs</a>

                    </div>
                </div>
        }
    </div>
</div>