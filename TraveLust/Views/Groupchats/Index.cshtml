@model TraveLust.Models.Message
<h2>Your groupchats</h2>
<br />

@if (ViewBag.Message != null)
{
    <h2 class="alert-secondary p-3 rounded-3 text-center mb-5">@ViewBag.Message</h2>
}

<br />
<a class="btn btn-outline-secondary" href="/Groupchats/New">Create new groupchat!</a>
<br />

<section style="background-color: #31353b;">
    <div class="container py-5">
        <div class="row">
            <div class="col-md-12">

                <div class="card" id="chat3" style="border-radius: 15px;">
                    <div class="card-body">

                        <div class="row">
                            @if (ViewBag.Groupchats == null)
                            {
                                <h2 class="alert-secondary p-3 rounded-3 text-center mb-5">You have no groupchats yet!</h2>
                            }
                            else
                            {
                                <div class="col-md-6 col-lg-5 col-xl-4 mb-4 mb-md-0">

                                    <div class="p-3">
                                        <div class="overflow-auto" style="position: relative; height: 400px">
                                            <ul class="list-unstyled mb-0">

                                                @foreach (var groupchat in ViewBag.Groupchats)
                                                {
                                                    <li class="p-2 border-bottom">
                                                        <p>@groupchat.Name, created by @groupchat.Creator.UserName</p>

                                                        <div class="card-text">@Html.Raw(groupchat.Description)</div>
                                                        <a class="btn btn-outline-secondary" href="/Groupchats/Index/@groupchat.GroupchatId"> <i class="bi bi-eye"></i> </a>

                                                        <a class="btn btn-outline-secondary" href="/Groupchats/Edit/@groupchat.GroupchatId"> <i class="bi bi-pencil-square"></i> </a>

                                                        <a class="btn btn-outline-secondary" href="/Groupchats/AddFriends/@groupchat.GroupchatId"> <i class="bi bi-people"></i> </a>

                                                        <a class="btn btn-outline-secondary" href="/Groupchats/Index/@groupchat.GroupchatId/@groupchat.ItineraryId"> <i class="bi bi-map"></i> </a>

                                                        @*generated by GitHub Copilot*@
                                                        @if (groupchat.Creator.Id == ViewBag.CurrentUserId)
                                                        {
                                                            <a class="btn btn-outline-secondary" href="/Groupchats/Delete/@groupchat.GroupchatId"> <i class="bi bi-trash"></i> </a>
                                                        }
                                                        else
                                                        {
                                                            <form method="post" action="/UserInGroupchats/Delete">
                                                                <input type="hidden" name="UserId" value="@ViewBag.CurrentUserId" />
                                                                <input type="hidden" name="GroupchatId" value="@groupchat.GroupchatId" />
                                                                <button class="btn btn-outline-secondary" type="submit">Leave groupchat</button>
                                                            </form>
                                                        }

                                                        <br />
                                                        <br />
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (ViewBag.Groupchat == null)
                            {
                                <div class="col-md-6 col-lg-7 col-xl-8">
                                    <h2 class="alert-secondary p-3 rounded-3 text-center mb-5">Select a groupchat to view messages!</h2>
                                </div>
                            }
                            else
                            {
                                if (ViewBag.Itinerary == null)
                                {
                                    <div class="col-md-6 col-lg-7 col-xl-8">
                                        @ViewBag.Groupchat.Name
                                        <div class="pt-3 pe-3 overflow-auto" style="position: relative; height: 400px">

                                            @foreach (var message in ViewBag.Messages)
                                            {
                                                @if (message.UserId == ViewBag.CurrentUserId)
                                                {
                                                    <div class="d-flex flex-row justify-content-end">
                                                        <div>
                                                            <p class="small p-2 ms-3 mb-1 rounded-3" style="background-color: #f5f6f7;">
                                                                @message.Text
                                                            </p>
                                                            <p class="small ms-3 mb-3 rounded-3 text-muted float-end">@message.Date</p>
                                                        </div>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="d-flex flex-row justify-content-start">
                                                        @message.User.UserName
                                                        <div>
                                                            <p class="small p-2 ms-3 mb-1 rounded-3" style="background-color: #f5f6f7;">
                                                                @message.Text
                                                            </p>
                                                            <p class="small ms-3 mb-3 rounded-3 text-muted float-end">@message.Date</p>
                                                        </div>
                                                    </div>
                                                }
                                            }
                                        </div>
                                        <form method="post" action="/Messages/New">

                                            <div class="card-footer text-muted d-flex justify-content-start align-items-center p-3">

                                                <input type="hidden" name="GroupchatId" value="@ViewBag.Groupchat.GroupchatId" />

                                                <textarea class="form-control" name="Text" placeholder="Write message"></textarea>

                                                <button class="btn btn-light btn-lg btn-rounded float-end" type="submit"><i class="bi bi-send"></i></button>
                                            </div>
                                        </form>
                                    </div>
                                }
                                else
                                {
                                    <div class="col-md-6 col-lg-7 col-xl-8">
                                        <h5> This is the itinerary you're planning for @ViewBag.Groupchat.Name!</h5>
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <h6> Staying period: @ViewBag.Itinerary.StayingPeriod days</h6>

                                                <h6> Budget: @ViewBag.Itinerary.Budget</h6>
                                                <h6> Spending: @ViewBag.Itinerary.Spending</h6>

                                                @*generated by github copilot*@

                                                @if(ViewBag.Itinerary.Spending > ViewBag.Itinerary.Budget)
                                                {
                                                    <h6 class="text-danger"> Overspending! </h6>
                                                    <div class="progress">
                                                        <div class="progress-bar bg-danger" role="progressbar" style="width: 25%;" aria-valuemax=@ViewBag.Itinerary.Budget aria-valuemin="0" aria-valuemax=@ViewBag.Itinerary.Budget>@ViewBag.Itinerary.Spending/@ViewBag.Itinerary.Budget</div>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <h6 class="text-success"> Still within budget! </h6>
                                                    <div class="progress">
                                                        <div class="progress-bar bg-success" role="progressbar" style="width: 25%;" aria-valuenow=@ViewBag.Itinerary.Spending aria-valuemin="0" aria-valuemax=@ViewBag.Itinerary.Budget>@ViewBag.Itinerary.Spending/@ViewBag.Itinerary.Budget</div>
                                                    </div>
                                                })

                                            </div>
                                            <div>
                                                <a href="/Itineraries/Edit/@ViewBag.Itinerary.ItineraryId" class="btn btn-outline-secondary"><i class="bi bi-pencil-square"></i></a>
                                            </div>
                                        </div>

                                        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                                            <div class="carousel-indicators">
                                                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                                                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                                                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                                            </div>
                                            <div class="carousel-inner">
                                                @{
                                                    bool isFirst = true;
                                                }
                                                @foreach (var p in ViewBag.Itinerary.PostInItineraries)
                                                {
                                                    if (isFirst)
                                                    {
                                                        <div class="carousel-item active">
                                                            <div class="d-flex justify-content-center w-100 bg-secondary">
                                                                <div class="card m-3" style="width: 15rem; background-color: white;">
                                                                    <div class="card-body">
                                                                        <img src="@p.Post.Photo" class="card-img-top" alt="@p.Post.Title" style="border-radius: 8px; width: 13rem; height: 15rem; ">
                                                                        <div class="d-flex flex-row justify-content-between align-items-center">
                                                                            <h3 class="card-title p-2">@p.Post.Title</h3>
                                                                            <div class="card-text p-2"><i class="bi bi-tag"></i> @p.Post.Price €</div>
                                                                        </div>
                                                                        <h5 class="card-subtitle mb-2 text-muted">@p.Description</h5>

                                                                        <div class="d-flex justify-content-around">
                                                                            <a href="/PostInItineraries/Edit/@p.PostId/@p.ItineraryId" class="btn btn-outline-secondary"> <i class="bi bi-pencil-square"></i> </a>

                                                                            <a href="/Posts/Show/@p.Post.PostId" class="btn btn-outline-secondary"><i class="bi bi-eye"></i></a>

                                                                            <form method="post" action="/PostInItineraries/RemovePost">
                                                                                <input type="hidden" name="PostId" value="@p.PostId" />
                                                                                <input type="hidden" name="ItineraryId" value="@p.ItineraryId" />
                                                                                <button class="btn btn-outline-secondary" type="submit"><i class="bi bi-calendar-minus"></i></button>
                                                                            </form>

                                                                            <a> </a>
                                                                        </div>

                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        isFirst = false;
                                                    }
                                                    else
                                                    {
                                                        <div class="carousel-item">
                                                            <div class="d-flex justify-content-center w-100 bg-secondary">
                                                                <div class="card m-3" style="width: 15rem; background-color: white;">
                                                                    <div class="card-body">
                                                                        <img src="@p.Post.Photo" class="card-img-top" alt="@p.Post.Title" style="border-radius: 8px; width: 13rem; height: 15rem; ">
                                                                        <div class="d-flex flex-row justify-content-between align-items-center">
                                                                            <h3 class="card-title p-2">@p.Post.Title</h3>
                                                                            <div class="card-text p-2"><i class="bi bi-tag"></i> @p.Post.Price €</div>
                                                                        </div>
                                                                        <h5 class="card-subtitle mb-2 text-muted">@p.Description</h5>

                                                                         <div class="d-flex justify-content-around">
                                                                            <a href="/PostInItineraries/Edit/@p.PostId/@p.ItineraryId" class="btn btn-outline-secondary"> <i class="bi bi-pencil-square"></i> </a>

                                                                            <a href="/Posts/Show/@p.Post.PostId" class="btn btn-outline-secondary"><i class="bi bi-eye"></i></a>

                                                                            <form method="post" action="/PostInItineraries/RemovePost">
                                                                                <input type="hidden" name="PostId" value="@p.PostId" />
                                                                                <input type="hidden" name="ItineraryId" value="@p.ItineraryId" />
                                                                                <button class="btn btn-outline-secondary" type="submit"><i class="bi bi-calendar-minus"></i></button>
                                                                            </form>
                                                                         </div>                                                                        
                                                                       
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }
                                                }
                                                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                                    <span class="bi bi-caret-left-square" aria-hidden="true"></span>
                                                    <span class="visually-hidden">Previous</span>
                                                </button>
                                                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                                    <span class="bi bi-caret-right-square" aria-hidden="true"></span>
                                                    <span class="visually-hidden">Next</span>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>